<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="206px"
    android:layout_height="80px" 
    >

    <ImageView
        android:id="@+id/titleBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg_btn"
        android:contentDescription="@string/contentDescription"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/webPic"
        android:layout_width="32px"
        android:layout_height="32px"
        android:layout_centerVertical="true"
        android:contentDescription="@string/contentDescription"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:src="@drawable/fail_drawable" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="130px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/webPic"
        android:layout_toLeftOf="@+id/closeBtn"
        android:singleLine="true"
        android:text="@string/infoTxt"
        android:textColor="@color/title_txt_color"
        android:textSize="24px" />

    <ImageButton
        android:id="@+id/closeBtn"
        android:layout_width="21px"
        android:layout_height="25px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/title_close_btn"
        android:contentDescription="@string/contentDescription"
        android:scaleType="fitXY" />

</RelativeLayout>