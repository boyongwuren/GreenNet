<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="@dimen/sliding_menu_width"
    android:layout_height="233px"
    android:background="@color/sliding_menu_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/sliding_menu_thumbPic_width"
        android:layout_height="@dimen/sliding_menu_thumbPic_height"
        android:layout_marginLeft="30px"
        android:layout_marginTop="29px" >

        <ImageView
            android:id="@+id/page_thumb_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            
            android:background="@color/gray"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/fail_drawable" />

        <ImageView
            android:id="@+id/thumbKK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/thumb_kk" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/page_delete_imageView"
        android:layout_width="53px"
        android:layout_height="53px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16px"
        android:layout_marginTop="12px"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/label_page_delete_btn" />

    <TextView
        android:id="@+id/label_page_name_textView"
        android:layout_width="221px"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198px"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:singleLine="true"
        android:textColor="@color/sliding_menu_text_color"
        android:textSize="30px" />

</RelativeLayout>
